<UserControl x:Class="TouchKeyboardMouse.Controls.VirtualKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    <Grid x:Name="KeyboardGrid">
        <Grid.RowDefinitions>
            <!-- Function row: half height -->
            <RowDefinition Height="0.5*"/>
            <!-- Number row -->
            <RowDefinition Height="*"/>
            <!-- QWERTY row -->
            <RowDefinition Height="*"/>
            <!-- ASDF row -->
            <RowDefinition Height="*"/>
            <!-- ZXCV row -->
            <RowDefinition Height="*"/>
            <!-- Bottom row -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Row 0: Function keys (half height) -->
        <UniformGrid Grid.Row="0" Rows="1" Margin="2">
            <Button Style="{StaticResource KeyButtonStyle}" Content="Esc" Tag="ESCAPE" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F1" Tag="F1" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F2" Tag="F2" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F3" Tag="F3" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F4" Tag="F4" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F5" Tag="F5" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F6" Tag="F6" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F7" Tag="F7" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F8" Tag="F8" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F9" Tag="F9" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F10" Tag="F10" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F11" Tag="F11" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="F12" Tag="F12" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="Del" Tag="DELETE" Click="Key_Click"/>
        </UniformGrid>
        
        <!-- Row 1: Number row -->
        <UniformGrid Grid.Row="1" Rows="1" Margin="2">
            <Button Style="{StaticResource KeyButtonStyle}" Content="`" Tag="OEM_3" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="1" Tag="1" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="2" Tag="2" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="3" Tag="3" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="4" Tag="4" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="5" Tag="5" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="6" Tag="6" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="7" Tag="7" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="8" Tag="8" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="9" Tag="9" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="0" Tag="0" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="-" Tag="OEM_MINUS" Click="Key_Click"/>
            <Button Style="{StaticResource KeyButtonStyle}" Content="=" Tag="OEM_PLUS" Click="Key_Click"/>
            <Button Style="{StaticResource WideKeyButtonStyle}" Content="⌫" Tag="BACK" Click="Key_Click"/>
        </UniformGrid>
        
        <!-- Row 2: QWERTY row -->
        <Grid Grid.Row="2" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Style="{StaticResource KeyButtonStyle}" Content="Tab" Tag="TAB" Click="Key_Click"/>
            <Button Grid.Column="1" Style="{StaticResource KeyButtonStyle}" Content="Q" Tag="Q" Click="Key_Click"/>
            <Button Grid.Column="2" Style="{StaticResource KeyButtonStyle}" Content="W" Tag="W" Click="Key_Click"/>
            <Button Grid.Column="3" Style="{StaticResource KeyButtonStyle}" Content="E" Tag="E" Click="Key_Click"/>
            <Button Grid.Column="4" Style="{StaticResource KeyButtonStyle}" Content="R" Tag="R" Click="Key_Click"/>
            <Button Grid.Column="5" Style="{StaticResource KeyButtonStyle}" Content="T" Tag="T" Click="Key_Click"/>
            <Button Grid.Column="6" Style="{StaticResource KeyButtonStyle}" Content="Y" Tag="Y" Click="Key_Click"/>
            <Button Grid.Column="7" Style="{StaticResource KeyButtonStyle}" Content="U" Tag="U" Click="Key_Click"/>
            <Button Grid.Column="8" Style="{StaticResource KeyButtonStyle}" Content="I" Tag="I" Click="Key_Click"/>
            <Button Grid.Column="9" Style="{StaticResource KeyButtonStyle}" Content="O" Tag="O" Click="Key_Click"/>
            <Button Grid.Column="10" Style="{StaticResource KeyButtonStyle}" Content="P" Tag="P" Click="Key_Click"/>
            <Button Grid.Column="11" Style="{StaticResource KeyButtonStyle}" Content="[" Tag="OEM_4" Click="Key_Click"/>
            <Button Grid.Column="12" Style="{StaticResource KeyButtonStyle}" Content="]" Tag="OEM_6" Click="Key_Click"/>
            <Button Grid.Column="13" Style="{StaticResource KeyButtonStyle}" Content="\" Tag="OEM_5" Click="Key_Click"/>
        </Grid>
        
        <!-- Row 3: ASDF row -->
        <Grid Grid.Row="3" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.2*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Style="{StaticResource ModifierKeyButtonStyle}" x:Name="CapsLockKey" Content="Caps" Tag="CAPITAL" Click="CapsLock_Click"/>
            <Button Grid.Column="1" Style="{StaticResource KeyButtonStyle}" Content="A" Tag="A" Click="Key_Click"/>
            <Button Grid.Column="2" Style="{StaticResource KeyButtonStyle}" Content="S" Tag="S" Click="Key_Click"/>
            <Button Grid.Column="3" Style="{StaticResource KeyButtonStyle}" Content="D" Tag="D" Click="Key_Click"/>
            <Button Grid.Column="4" Style="{StaticResource KeyButtonStyle}" Content="F" Tag="F" Click="Key_Click"/>
            <Button Grid.Column="5" Style="{StaticResource KeyButtonStyle}" Content="G" Tag="G" Click="Key_Click"/>
            <Button Grid.Column="6" Style="{StaticResource KeyButtonStyle}" Content="H" Tag="H" Click="Key_Click"/>
            <Button Grid.Column="7" Style="{StaticResource KeyButtonStyle}" Content="J" Tag="J" Click="Key_Click"/>
            <Button Grid.Column="8" Style="{StaticResource KeyButtonStyle}" Content="K" Tag="K" Click="Key_Click"/>
            <Button Grid.Column="9" Style="{StaticResource KeyButtonStyle}" Content="L" Tag="L" Click="Key_Click"/>
            <Button Grid.Column="10" Style="{StaticResource KeyButtonStyle}" Content=";" Tag="OEM_1" Click="Key_Click"/>
            <Button Grid.Column="11" Style="{StaticResource KeyButtonStyle}" Content="'" Tag="OEM_7" Click="Key_Click"/>
            <Button Grid.Column="12" Style="{StaticResource KeyButtonStyle}" Content="Enter" Tag="RETURN" Click="Key_Click"/>
        </Grid>
        
        <!-- Row 4: ZXCV row -->
        <Grid Grid.Row="4" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.3*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.7*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Style="{StaticResource ModifierKeyButtonStyle}" x:Name="LeftShiftKey" Content="Shift" Tag="LSHIFT" Click="Shift_Click"/>
            <Button Grid.Column="1" Style="{StaticResource KeyButtonStyle}" Content="Z" Tag="Z" Click="Key_Click"/>
            <Button Grid.Column="2" Style="{StaticResource KeyButtonStyle}" Content="X" Tag="X" Click="Key_Click"/>
            <Button Grid.Column="3" Style="{StaticResource KeyButtonStyle}" Content="C" Tag="C" Click="Key_Click"/>
            <Button Grid.Column="4" Style="{StaticResource KeyButtonStyle}" Content="V" Tag="V" Click="Key_Click"/>
            <Button Grid.Column="5" Style="{StaticResource KeyButtonStyle}" Content="B" Tag="B" Click="Key_Click"/>
            <Button Grid.Column="6" Style="{StaticResource KeyButtonStyle}" Content="N" Tag="N" Click="Key_Click"/>
            <Button Grid.Column="7" Style="{StaticResource KeyButtonStyle}" Content="M" Tag="M" Click="Key_Click"/>
            <Button Grid.Column="8" Style="{StaticResource KeyButtonStyle}" Content="," Tag="OEM_COMMA" Click="Key_Click"/>
            <Button Grid.Column="9" Style="{StaticResource KeyButtonStyle}" Content="." Tag="OEM_PERIOD" Click="Key_Click"/>
            <Button Grid.Column="10" Style="{StaticResource KeyButtonStyle}" Content="/" Tag="OEM_2" Click="Key_Click"/>
            <Button Grid.Column="11" Style="{StaticResource ModifierKeyButtonStyle}" x:Name="RightShiftKey" Content="Shift" Tag="RSHIFT" Click="Shift_Click"/>
        </Grid>
        
        <!-- Row 5: Bottom row (Ctrl, Win, Alt, Space, etc) -->
        <Grid Grid.Row="5" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Style="{StaticResource ModifierKeyButtonStyle}" x:Name="CtrlKey" Content="Ctrl" Tag="LCONTROL" Click="Ctrl_Click"/>
            <Button Grid.Column="1" Style="{StaticResource ModifierKeyButtonStyle}" x:Name="WinKey" Content="⊞" Tag="LWIN" Click="Key_Click"/>
            <Button Grid.Column="2" Style="{StaticResource ModifierKeyButtonStyle}" x:Name="AltKey" Content="Alt" Tag="LMENU" Click="Alt_Click"/>
            <Button Grid.Column="3" Style="{StaticResource SpaceKeyButtonStyle}" Content="" Tag="SPACE" Click="Key_Click"/>
            <Button Grid.Column="4" Style="{StaticResource ModifierKeyButtonStyle}" Content="Alt" Tag="RMENU" Click="Alt_Click"/>
            <Button Grid.Column="5" Style="{StaticResource ModifierKeyButtonStyle}" Content="Ctrl" Tag="RCONTROL" Click="Ctrl_Click"/>
            <Button Grid.Column="6" Style="{StaticResource KeyButtonStyle}" Content="←" Tag="LEFT" Click="Key_Click"/>
            <Button Grid.Column="7" Style="{StaticResource KeyButtonStyle}" Content="↑&#x0a;↓" Tag="UPDOWN" Click="UpDown_Click" FontSize="10"/>
            <Button Grid.Column="8" Style="{StaticResource KeyButtonStyle}" Content="→" Tag="RIGHT" Click="Key_Click"/>
        </Grid>
    </Grid>
</UserControl>
