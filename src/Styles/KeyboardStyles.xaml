<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="KeyBackgroundColor">#3a3a3a</Color>
    <Color x:Key="KeyBackgroundHoverColor">#4a4a4a</Color>
    <Color x:Key="KeyBackgroundPressedColor">#2a2a2a</Color>
    <Color x:Key="KeyForegroundColor">#ffffff</Color>
    <Color x:Key="AccentColor">#007ACC</Color>
    <Color x:Key="ModifierActiveColor">#007ACC</Color>

    <!-- Standard Key Button Style -->
    <Style x:Key="KeyButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#3a3a3a"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="6"
                            BorderThickness="1"
                            BorderBrush="#505050">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#4a4a4a"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2a2a2a"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Wide Key Button Style (for Backspace, etc.) -->
    <Style x:Key="WideKeyButtonStyle" TargetType="Button" BasedOn="{StaticResource KeyButtonStyle}">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <!-- Space Key Button Style -->
    <Style x:Key="SpaceKeyButtonStyle" TargetType="Button" BasedOn="{StaticResource KeyButtonStyle}">
        <Setter Property="Background" Value="#454545"/>
    </Style>

    <!-- Modifier Key Button Style (Shift, Ctrl, Alt, etc.) -->
    <Style x:Key="ModifierKeyButtonStyle" TargetType="Button" BasedOn="{StaticResource KeyButtonStyle}">
        <Setter Property="Background" Value="#3a3a3a"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Control Bar Button Style -->
    <Style x:Key="ControlButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#888"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#444"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Close Button Style -->
    <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#c42b1c"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#a02010"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Trackpad Button Style -->
    <Style x:Key="TrackpadButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#353535"/>
        <Setter Property="Foreground" Value="#AAAAAA"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="6"
                            BorderThickness="1"
                            BorderBrush="#404040">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#454545"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#252525"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#007ACC"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox Style -->
    <Style x:Key="SettingsTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="#2d2d2d"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,5"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Slider Style -->
    <Style x:Key="SettingsSliderStyle" TargetType="Slider">
        <Setter Property="Minimum" Value="0.5"/>
        <Setter Property="Maximum" Value="3"/>
        <Setter Property="TickFrequency" Value="0.1"/>
        <Setter Property="IsSnapToTickEnabled" Value="True"/>
        <Setter Property="Foreground" Value="#007ACC"/>
    </Style>

    <!-- CheckBox Style -->
    <Style x:Key="SettingsCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

</ResourceDictionary>
