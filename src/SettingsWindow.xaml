<Window x:Class="TouchKeyboardMouse.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="400"
        Height="450"
        WindowStyle="None"
        Background="#1f1f1f"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    
    <Border BorderBrush="#333" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#1a1a1a" CornerRadius="8,8,0,0" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="Settings" Foreground="White" FontSize="14" 
                               VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <Button HorizontalAlignment="Right" Width="40" Height="30" 
                            Style="{StaticResource CloseButtonStyle}" Content="âœ•" 
                            Click="CloseButton_Click" Margin="0,5,5,5"/>
                </Grid>
            </Border>
            
            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,15">
                <StackPanel>
                    <!-- Trackpad Settings -->
                    <TextBlock Text="Trackpad" Foreground="#888" FontSize="12" 
                               FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Cursor Sensitivity" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="CursorSensitivitySlider" 
                                Value="1.5" Minimum="0.5" Maximum="3" 
                                TickFrequency="0.1" IsSnapToTickEnabled="True"
                                ValueChanged="CursorSensitivitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" x:Name="CursorSensitivityValue" 
                                   Text="1.5x" Foreground="#888" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <TextBlock Text="Scroll Sensitivity" Foreground="White" FontSize="14" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="ScrollSensitivitySlider" 
                                Value="2.0" Minimum="0.5" Maximum="5" 
                                TickFrequency="0.1" IsSnapToTickEnabled="True"
                                ValueChanged="ScrollSensitivitySlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" x:Name="ScrollSensitivityValue" 
                                   Text="2.0x" Foreground="#888" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <TextBlock Text="Tap Threshold (ms)" Foreground="White" FontSize="14" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="TapThresholdSlider" 
                                Value="200" Minimum="100" Maximum="500" 
                                TickFrequency="10" IsSnapToTickEnabled="True"
                                ValueChanged="TapThresholdSlider_ValueChanged"/>
                        <TextBlock Grid.Column="1" x:Name="TapThresholdValue" 
                                   Text="200ms" Foreground="#888" 
                                   VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <Separator Margin="0,20" Background="#333"/>
                    
                    <!-- Display Settings -->
                    <TextBlock Text="Display" Foreground="#888" FontSize="12" 
                               FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="AlwaysOnTopCheckBox" Content="Always on top" 
                              Foreground="White" IsChecked="True" Margin="0,5"
                              Checked="AlwaysOnTopCheckBox_Changed" Unchecked="AlwaysOnTopCheckBox_Changed"/>
                    
                    <CheckBox x:Name="ShowOnSecondaryMonitorCheckBox" Content="Open on secondary monitor" 
                              Foreground="White" IsChecked="True" Margin="0,5"/>
                    
                    <Separator Margin="0,20" Background="#333"/>
                    
                    <!-- About -->
                    <TextBlock Text="About" Foreground="#888" FontSize="12" 
                               FontWeight="SemiBold" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Touch Keyboard &amp; Mouse v1.0" Foreground="White" FontSize="14"/>
                    <TextBlock Text="Virtual input for dual-screen devices" Foreground="#666" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Bottom Buttons -->
            <Border Grid.Row="2" Background="#1a1a1a" CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15,0">
                    <Button Content="Reset Defaults" Width="100" Height="30" 
                            Style="{StaticResource ControlButtonStyle}" 
                            Click="ResetDefaults_Click" Margin="0,0,10,0"/>
                    <Button Content="Close" Width="80" Height="30" 
                            Style="{StaticResource ControlButtonStyle}" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
